@model IEnumerable<Candidate>
@{
    ViewData["Title"] = "Index";
}
@if(Model.Count()>0)
{
    <h6 class="display-6">
        Applications
    </h6>
    <table class="table table-hover tabletable-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>FullName</th>
                <th>Apply At</th>
                <th>Course</th>
            </tr>
        </thead>
    </table>
}
else
{
    <div class="alert alert-info">
        There is no application. Please click here to
        <a class="alert-link" asp-action="Apply">apply</a>.
    </div> 
}

